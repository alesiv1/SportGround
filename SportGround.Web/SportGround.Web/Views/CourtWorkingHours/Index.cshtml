@model SportGround.BusinessLogic.Models.CourtWithWorkingHoursModel

<td>
    <a href="@Url.Action("Create", "CourtWorkingHours", new {courtId = Model.Id})" class="btn btn-primary">
        <span>
            <strong>Create new</strong>
        </span>
    </a>
</td>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Day")
        </th>
        <th>
            @Html.DisplayName("StartTime")
        </th>
        <th>
            @Html.DisplayName("EndTime")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.AllWorkingHours)
    {
             <tr>
                 <td>
                     @Html.DisplayFor(modelItem => item.Day)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.StartTime)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.EndTime)
                 </td>
                 <td>
                     @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                     @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                     @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                 </td>
             </tr>
    }
    </table>
