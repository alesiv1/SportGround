@model SportGround.Web.Models.CalendarModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Calendar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (this.User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Users", "Index", "User")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Profile", "Profile", "User")</li>
                }
                <li>@Html.ActionLink("Courts", "Index", "Court")</li>
                <li>@Html.ActionLink("My court booking", "Index", "CourtBooking")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Logout", "LogOut", "Authorisation")</li>
            </ul>
        </div>
    </div>
</div>
<div style="height:80vh;width:100%;margin:0; padding: 0">
    @Html.Raw(Model.Scheduler.Render())
</div>
<footer style="height: 50px">
    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
</footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
