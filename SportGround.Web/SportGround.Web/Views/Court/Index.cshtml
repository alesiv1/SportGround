@model IEnumerable<SportGround.BusinessLogic.Models.CourtModel>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Operations</th>
        <th>Booking</th>
    @if (this.User.IsInRole("Admin"))
    {
        <th>Working days</th>
    }
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (this.User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) 
            } |
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @if (this.User.IsInRole("Admin"))
            {
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            }
        </td>
        @if (item.CanBooking)
        { 
        <td>
            <a href="@Url.Action("BookingCourt", "CourtBooking", new {courtId = item.Id})" class="btn btn-primary">
                <span>
                    <strong>Booking this court</strong>
                </span>
            </a>
        </td>
        }
        else
        {
            <td>
                <p>This court doesn't have working days</p>
            </td>
        }
        @if (this.User.IsInRole("Admin"))
        {
            <td>
                <a href="@Url.Action("Index", "CourtWorkingHours", new {courtId = item.Id})" class="btn btn-primary">
                    <span>
                        <strong>Working days</strong>
                    </span>
                </a>
            </td>
        }
    </tr>
}
</table>
