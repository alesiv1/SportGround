@using System.Drawing
@using WebGrease.Css.Extensions
@model SportGround.BusinessLogic.Models.CreateCourtBookingModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Court.Id)
        @Html.HiddenFor(model => model.User.Id)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Court.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Court.Name, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.User.FirstName, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.AvailableDate, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("AvailableDate", new SelectList(Model.AvailableDate), new {style = "width: 100px; height : 30px; border-radius: 5px;"})
                @Html.ValidationMessageFor(model => model.AvailableDate, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"  style="background-color: chartreuse"/>
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Court")" class="btn btn-primary fa fa-pencil">
        <span>
            <strong>Back to List</strong>
        </span>
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
